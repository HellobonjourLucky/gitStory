<%- include('header');-%>

  <div class="box" id="heading">
    <h1><%= listTitle %></h1>
  </div>

  <div class="box">

    <% items.forEach(item => { %>
      <form action="/" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox">
          <p><%= item%></p>
        </div>
        <input type="hidden" name="listName">
      </form>
    <% }) %>

    <form class="item" action="/" method="post">
      <input type="text" name="newItem" placeholder="New Todo" autocomplete="off">
      <button type="submit" name="listBtn">+</button>
    </form>
  </div>

<%- include('footer');-%>
